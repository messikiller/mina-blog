<import src="../../wxParse/wxParse.wxml"/>
<i-tabs current="{{ current_cate }}">
  <i-tab
    wx:for="{{ cates }}"
    wx:for-item="cate"
    wx:key=""
    key="{{ cate.key }}"
    title="{{ cate.title }}"
    data-cate="{{ cate }}"
    bindtap="handleTapCateBar"
  ></i-tab>
</i-tabs>

<view hidden='{{!showCates}}' class='cates common'>
  <i-row>
    <i-col span="8" i-class="col-class"><view class='cate'>PHP</view></i-col>
    <i-col span="8" i-class="col-class"><view class='cate'>PHP</view></i-col>
    <i-col span="8" i-class="col-class"><view class='cate'>PHP</view></i-col>
  </i-row>
</view>

<view class='articles'>
  <view
    wx:for="{{ articles }}"
    wx:key=""
    wx:for-item="article"
    class='box'
    data-article='{{ article }}'
    bindtap='handleArticleTap'
  >
    <i-card title="{{ article.title }}">
      <view slot="content">
          <template is="wxParse" data="{{wxParseData: summaryArray[index]}}"/>
      </view>
      <view slot="footer">
        <view class='tag'
          wx:for="{{ article.tags }}"
          wx:key=""
          wx:for-item="tag"
          style="background-color: {{ tag.color }}"
        >{{ tag.tag_title }}</view>
        <view class='article-time'>
          {{ article.cate_title }}
          /  
          {{ article.published_at }}
        </view>
      </view>
    </i-card>
  </view>
</view>


